<h2>注册</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= errors_for resource %>

  <div class="form-group">
    <%= f.label :email, "Email", class: "font-weight-bold" %>
    <%= f.email_field :email, autofocus: true, placeholder: "Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password, "密码", class: "font-weight-bold" %>
    <%= f.password_field :password, autocomplete: "off", placeholder: "密码", class: "form-control" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">最少<%= @minimum_password_length %>个字符</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "确认密码", class: "font-weight-bold" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "确认密码", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :first_name, "用户名", class: "font-weight-bold" %>
    <%= f.text_field :first_name, placeholder: "用户名", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone, "手机号", class: "font-weight-bold" %>
    <%= f.text_field :phone, placeholder: "手机号", class: "form-control" %>
  </div>

  <div class="actions">
    <%= link_to "返回", :back, class: "btn btn-outline-secondary" %>
    <%= f.submit "注册", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
